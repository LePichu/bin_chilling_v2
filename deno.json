{
	"importMap": "./import_map.json",
	"tasks": {
		"lume": "echo \"import 'lume/cli.ts'\" | deno run -A -",
		"build": "deno task lume",
		"serve": "deno task lume -s"
	},
	"compilerOptions": {
		"jsx": "react-jsx",
		"jsxImportSource": "https://esm.sh/preact@10.11.0"
	},
	"fmt": {
		"indentWidth": 4,
		"semiColons": false,
		"useTabs": true,
		"singleQuote": false
	}
}
